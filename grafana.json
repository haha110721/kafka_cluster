{
  "annotations": {
    "list": []
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "stat",
      "title": "Kafka Broker Health",
      "targets": [
        {
          "expr": "up{job=\"kafka-exporter\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 1},
              {"color": "red", "value": 0}
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Consumer Group Lag",
      "targets": [
        {
          "expr": "sum(kafka_consumer_group_lag{topic=~\"$topic\"}) by (consumer_group)",
          "legendFormat": "{{consumer_group}}",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Messages In Per Second",
      "targets": [
        {
          "expr": "rate(kafka_topic_partition_current_offset{topic=~\"$topic\"}[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Bytes In/Out Per Second",
      "targets": [
        {
          "expr": "rate(kafka_server_brokertopicmetrics_bytesin_total{topic=~\"$topic\"}[5m])",
          "legendFormat": "Bytes In",
          "refId": "A"
        },
        {
          "expr": "rate(kafka_server_brokertopicmetrics_bytesout_total{topic=~\"$topic\"}[5m])",
          "legendFormat": "Bytes Out",
          "refId": "B"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Producer Request Rate",
      "targets": [
        {
          "expr": "rate(kafka_producer_request_total[5m])",
          "legendFormat": "Requests",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Producer Error Rate",
      "targets": [
        {
          "expr": "rate(kafka_producer_error_total[5m])",
          "legendFormat": "Errors",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Consumer Fetch Rate",
      "targets": [
        {
          "expr": "rate(kafka_consumer_fetch_total[5m])",
          "legendFormat": "Fetches",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "type": "timeseries",
      "title": "Consumer Error Rate",
      "targets": [
        {
          "expr": "rate(kafka_consumer_failed_fetch_requests_total[5m])",
          "legendFormat": "Errors",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": [
    "kafka",
    "monitoring"
  ],
  "templating": {
    "list": [
      {
        "name": "topic",
        "label": "Topic",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(kafka_topic_partition_current_offset, topic)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "sort": 1
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "timezone": "browser",
  "title": "Kafka Monitoring Dashboard",
  "uid": "kafka-monitoring-dashboard",
  "version": 1,
  "refresh": "10s"
}